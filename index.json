{
  "tabWidth": 2,
  "useTabs": true,
  "semi": true,
  "overrides": [
    {
      "files": ["*.html", "*.ts", "*.js"],
      "options": {
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "tabWidth": 2,
        "printWidth": 100,
        "arrowParens": "avoid",
        "jsxSingleQuote": true,
        "jsxBracketSameLine": false,
        "endOfLine": "auto"
      }
    },
    {
      "files": "*.vue",
      "options": {
        "semi": true
      }
    }
  ]
}
